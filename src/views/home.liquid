<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/style.css">
    <title>Home</title>
  </head>
  <body class="bg-gray-900">
    {% render 'header.liquid' %}
    <section id="completed" class="my-4">
      <h2 class="mx-2 p-2 text-white text-xl font-bold bg-gray-950">Completed</h2>
      <div class="flex w-full flex-wrap px-2">
        {% for anime in buffer.complete %}
          <div class="w-1/6 h-52 p-2">
            <a href="{{anime.link}}" class="w-full h-full bg-gray-500 relative">
              <img
                class="w-full h-full object-cover"
                src="{{ anime.thumb }}"
                alt="">
              <div class="shade absolute top-0 left-0 w-full h-full bg-gray-600 bg-opacity-0 hover:bg-opacity-70 transition duration-200 ease-in-out group flex justify-center items-center">
                <h3 class="text-center text-white font-medium absolute opacity-0 group-hover:opacity-100 transition duration-200 ease-in-out">{{ anime.title }}</h3>
              </div>
            </a>
          </div>
        {% endfor %}
        <a href="#" class="w-1/6 h-52 p-2">
          <div class="w-full h-full bg-gray-500 flex items-center justify-center text-white font-medium text-xl">
            More
          </div>
        </a>
      </div>
    </section>
    <section id="ongoing" class="my-4">
      <h2 class="mx-2 p-2 text-white text-xl font-bold bg-gray-950">On Going</h2>
      <div class="flex w-full flex-wrap px-2">
        {% for anime in buffer.on_going %}
          <div class="w-1/6 h-52 p-2">
            <a href="/detail/{{anime.id}}" class="w-full h-full bg-gray-500 relative">
              <img
                class="w-full h-full object-cover"
                src="{{ anime.thumb }}"
                alt="">
              <div class="shade absolute top-0 left-0 w-full h-full bg-gray-600 bg-opacity-0 hover:bg-opacity-70 transition duration-200 ease-in-out group flex justify-center items-center p-2">
                <h3 class="text-center text-white font-medium absolute opacity-0 group-hover:opacity-100 transition duration-200 ease-in-out">{{ anime.title }}</h3>
              </div>
            </a>
          </div>
        {% endfor %}
        <a href="#" class="w-1/6 h-52 p-2">
          <div class="w-full h-full bg-gray-500 flex items-center justify-center text-white font-medium text-xl">
            More
          </div>
        </a>
      </div>
    </section>
  </body>
</html>
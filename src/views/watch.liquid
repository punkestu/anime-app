<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/public/style.css">
    <title>{{ buffer.title }}</title>
  </head>
  <body class="bg-gray-900 h-screen">
    {% render 'header.liquid' %}
    <section class="my-4 h-5/6 bg-gray-800">
      <iframe
        class="w-full h-full"
        src="{{videoUrl}}"
        frameborder="0"
        onload="close()"
        allow="cors"
        allowfullscreen="true"></iframe>
    </section>
  </body>
  <script>
      function close(){
            setInterval(()=>{
                  document.querySelector("div.close-button").click();
            }, 1000);
      }
  </script>
</html>